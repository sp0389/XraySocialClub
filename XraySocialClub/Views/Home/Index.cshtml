<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4" src="" alt="" width="100" height="80">
    <h1 class="display-5 fw-bold">Welcome to XraySocialClub!</h1>
    <div class="col-lg-6 mx-auto">
        @if (User.Identity != null && !User.Identity.IsAuthenticated)
        {
            <p class="lead mb-4">Log in with an existing account or sign up with us today!</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a class="btn btn-primary btn-lg px-4 gap-3" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                <a class="btn btn-outline-secondary btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">Log In</a>
            </div>
        }
        else
        {
            <p class="lead mb-4">Hi @(User.Identity?.Name ?? "User")! What would you like to do today?</p>
        }
    </div>
</div>