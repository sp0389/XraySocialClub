@model EditViewModel

@{
    ViewData["Title"] = "Edit Member";
}
<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
</div>

<form asp-action="Edit" method="post" class="card p-4 shadow-lg">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" id="floatingInput">
        <label asp-for="FirstName">First Name</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" id="floatingInput">
        <label asp-for="LastName">Last Name</label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Email" type="email" class="form-control" id="floatingInput">
        <label asp-for="Email">Email Address</label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select class="form-select" id="floatingSelect" aria-label="Role Select" asp-for="Role"
            asp-items="Html.GetEnumSelectList<Role>()">
        </select>
        <label for="floatingSelect">Role</label>
    </div>

    <div class="mb-3">
        @foreach(var role in Model.Roles)
        {
            <button type="button" class="btn btn-secondary btn-sm">Remove @role</button>
        }
    </div>

    <a class="btn btn-primary" href="#" role="button">Update</a>
</form>