@using XraySocialClub.Areas.Administration.Models;
@model IEnumerable<MemberViewModel>

@{
  ViewData["Title"] = "Members";
}
<h1 class="text-center">@ViewData["Title"]</h1>

<a class="btn btn-primary mb-3" href="#" role="button">Register Member</a>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Role</th>
      <th scope="col">Administration</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var m in Model)
    {
      <tr>
        <th scope="row">@m.Id</th>
        <td>@m.FirstName</td>
        <td>@m.LastName</td>
        <td>@m.Role.ToString()</td>
        <td><a href="#">Update</a> | <a href="#">Payment</a></td>
      </tr>
    }
  </tbody>
</table>

<a class="btn btn-primary float-end" href="/Administration/Member?isLotto=false">Social Members</a>
<a class="btn btn-primary float-end me-1" href="/Administration/Member?isLotto=true">Lotto Members</a>
<a class="btn btn-primary float-end mb-3 me-1" href="/Administration/Member">All Members</a>