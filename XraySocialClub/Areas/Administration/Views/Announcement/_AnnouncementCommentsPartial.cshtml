@model IEnumerable<Comment>

@foreach(var m in Model)
{
	<div class="card mx-auto mb-3" style="width: 50rem;">
		<div class="card-body">
			<p class="card-text">@m.Message</p>
			<p class="card-text text-end m-0"><small class="text-body-secondary">@m.Member.FirstName @m.Member.LastName</small></p>
			<p class="card-text text-end m-0"><small class="text-body-secondary">@Extensions.AsTimeAgo(m.CreatedAt)</small></p>
		</div>
	</div>
}